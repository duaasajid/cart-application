<h2>Order Confirmation</h2>

<%= form_for @order do |f| %>
  <div class="form-group">
    <%= f.label :customer_name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :shipping_address %>
    <%= f.text_field :shipping_address, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :phone_number %>
    <%= f.text_field :phone_number, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :payment_method %>
    <%= f.select :payment_method, ["Credit Card", "Cash on Delivery"], {}, class: "form-control" %>
  </div>

  <%= button_to "Place Order", new_order_path, method: :get, class: "btn btn-primary" %>

<% end %>
